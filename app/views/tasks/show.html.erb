<h1 class="p-2"><%= t('.title') %></h1>
<!--<h1>Show Task Page</h1>-->

<p class="h5 p-2">
  <strong><%= Task.human_attribute_name(:title) %>:</strong>
  <%= @task.title %>
</p>

<p class="h5 p-2">
  <strong><%= Task.human_attribute_name(:content) %>:</strong>
  <%= @task.content %>
</p>

<p class="h5 p-2">
  <strong><%= Task.human_attribute_name(:created_at) %>:</strong>
  <%= @task.created_at %>
</p>

<p class="h5 p-2">
  <strong><%= Task.human_attribute_name(:deadline_on) %>:</strong>
  <%= @task.deadline_on%>
</p>

<p class="h5 p-2">
  <strong><%= Task.human_attribute_name(:priority) %>:</strong>
  <%= I18n.t("activerecord.enums.priority.#{@task.priority}") %>
</p>

<p class="h5 p-2">
  <strong><%= Task.human_attribute_name(:status) %>:</strong>
  <%= I18n.t("activerecord.enums.status.#{@task.status}") %>
</p>

<p class="h5 p-2">
  <strong><%= Label.human_attribute_name(:label) %>:</strong>
  <% @task.labels.each do |label| %>
    <%= label.name %>
  <% end %>
</p>

<%= link_to t('common.edit'), edit_task_path(@task), id: "edit-task", class:"btn btn-link" %>
<%= link_to t('common.back'), tasks_path, id: "back", class:"btn btn-link" %>
