<h1 class="p-2"><%= t(".title") %></h1>
<%= form_with(scope: :session, url: sessions_path, local: true, class:"px-4 py-3") do |f| %>
  <div class="mb-3 field">
    <%= f.label :email, I18n.t("activerecord.attributes.user.email"), class:"form-label" %>
    <%= f.email_field :email, class:"form-control" %>
  </div>

  <div class="mb-3 field">
    <%= f.label :password, I18n.t("activerecord.attributes.user.password"), class:"form-label" %>
    <%= f.password_field :password, class:"form-control" %>
  </div>

  <div class="actions">
    <%#= f.submit t("create"), id: "create-session" %>
    <%= f.submit t("common.login"), id: "create-session", class:"btn btn-primary" %>
  </div>
<% end %>